{
  "name": "HMS_MCP_CAN",
  "version": "1.0.0",
  "description": "Cross-platform MCP CAN library for embedded systems.",
  "keywords": [
    "mcp_can",
    "embedded",
    "arduino",
    "esp-idf",
    "stm32"
  ],
  "authors": [
    {
      "name": "Hamas Saeed",
      "email": "hamasaeed888@gmail.com",
      "url": "https://github.com/Hamas888",
      "maintainer": true
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hamas888/HMS_MCP_CAN.git"
  },
  "frameworks": ["arduino", "espidf"],
  "platforms": ["espressif32"],
  "build": {
    "srcDir": ".",
    "srcFilter": [
        "+<src/*.cpp>",
        "+<MCP_CAN_lib/mcp_can.cpp>"
    ],
    "flags": [
      "-std=gnu++17",
      "-I MCP_CAN_lib"
    ],
    "unflags": [
      "-std=gnu++11"
    ]
  },
  "license": "MIT",
  "homepage": "https://github.com/Hamas888/HMS_MCP_CAN",
  "examples": [
    "examples"
  ],
  "export": {
    "include": [
      "src",
      "include",
      "MCP_CAN_lib",
      "examples",
      "CMakeLists.txt",
      "library.json",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "test",
      ".pio",
      ".vscode"
    ]
  }
}